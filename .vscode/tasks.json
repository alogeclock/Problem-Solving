{
  "version": "2.0.0",
  "runner": "terminal",
  "type": "shell",
  "echoCommand": true,
  "presentation": {
    "reveal": "always"
  },
  "tasks": [
    {
      "label": "save and compile for C++",
      "command": "g++ -g \"${file}\" -o \"${fileDirname}/${fileBasenameNoExtension}\" && cmd /C \"${fileDirname}\\${fileBasenameNoExtension}.exe\"",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": {
        "fileLocation": [
          "relative",
          "${workspaceRoot}"
        ],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    }
  ]
}